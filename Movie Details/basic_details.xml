<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basic_details">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie Basic  Details"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie Id"
        android:layout_marginTop="100dp">
    </TextView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your Movie Id"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp">

    </EditText>
  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="100dp">
    </TextView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your Name"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp">

    </EditText>
  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language"
        android:layout_marginTop="100dp">
    </TextView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your Language"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp">

    </EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:layout_marginTop="150dp">
    </TextView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your Year"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="150dp">

    </EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category"
        android:layout_marginTop="200dp">
    </TextView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your category"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="150dp">

    </EditText>
   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:layout_marginTop="200dp">
    </TextView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your Duration"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="150dp">

    </EditText>
  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMDB rating"
        android:layout_marginTop="200dp">
    </TextView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your IMDB rating""
        android:layout_marginTop="200dp"
        android:layout_marginLeft="150dp">

    </EditText>
</FrameLayout>
